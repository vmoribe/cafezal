<h1>Listagem Produtos</h1>

<%= link_to 'Novo Produto', new_produto_path,:class => 'btn btn-default' %>

<% @produtos.select("DISTINCT(ano)").each do |p| %>
<% @parametro_ano = p.ano %>


<table class="table table-condensed table-hover text-center">
  <thead>
    <tr>
      <th>Ano</th>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Pre√ßo (R$/ton)</th>
      <th>Custo Op (R$/ton)</th>
      <th>Nitrogenio n</th>
      <th>Fosforo p2o5</th>
      <th>Potassio k2o</th>
      <th>Calcio ca</th>
      <th>Magnesio mg</th>
      <th>Enxofre s</th>
      <th>Boro b</th>
      <th>Cobre cu</th>
      <th>Ferro fe</th>
      <th>Manganes mn</th>
      <th>Zinco zn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.where("ano= ?", @parametro_ano).each do |produto| %>
      <tr>
        <td><%= produto.ano %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.tipo %></td>
        <td><%= valor_emreais(produto.preco) %></td>
        <td><%= valor_emreais(produto.custo_op) %></td>
        <td><%= produto.nitrogenio_n %></td>
        <td><%= produto.fosforo_p2o5 %></td>
        <td><%= produto.potassio_k2o %></td>
        <td><%= produto.calcio_ca %></td>
        <td><%= produto.magnesio_mg %></td>
        <td><%= produto.enxofre_s %></td>
        <td><%= produto.boro_b %></td>
        <td><%= produto.cobre_cu %></td>
        <td><%= produto.ferro_fe %></td>
        <td><%= produto.manganes_mn %></td>
        <td><%= produto.zinco_zn %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
